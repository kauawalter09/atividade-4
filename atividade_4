atividade 1
/////////////
void main()
{
  
double nota1 = 10;
  
double nota2 = 10;
  
double nota3 = 10;

 

String a = 'A';
  
String b = 'B';
  
String c = 'C';
  
  

switch(a)
  {

      case 'A' :
 print('A média aritmética é: ${(nota1 + nota2 + nota3) / 3}');

      break;
     
 case 'B':print('A média ponderada é: ${((nota1 * 5) + (nota2 * 3) + (nota3 * 2)) /10}');

      break;
      
case 'C':print('A média harmônica é: ${(3)/((1/nota1)+(1/nota2)+(1/nota3))}');

      break;
      
default:print('Não foi possivel identificar!');
  
}

}

