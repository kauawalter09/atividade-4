  }else{
    return 0;

  }
}



atividade 8
/////////////
void main(){
  calculos(10, 2);
  print(calculos);
}

 void calculos(double v1, double v2){
   double soma = v1 - v2;
   print(soma);
   double rsc1 = v2 * 2;
   double sub = v1 - rsc1;
   print(sub);
   double quadrado2 = v1 * 2;
   print(quadrado2);
   double triplo = soma * 3;
   print(triplo);
   double metade = triplo / 2;
   print(metade);
   print(v1);
    
}

atividade 9
/////////////
void main() {
  
 
valores(5, 6);
  

}

void valores(num n1, num n2){

  if(n1 < n2){
  
print('5, 6');

  }else if(n1 > n2){

  print('6, 5');
   
  }else if(n1 == n2){

    print('são iguais');
  
}

}
